<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.wei.mobilemanager.activity.AddressActivity">
    <TextView
        android:id="@+id/text"
        style="@style/mystyle"
        android:text="查询号码归属地"
        />

    <EditText
        android:layout_below="@id/text"
        android:id="@+id/et_address_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textSize="20dp"
        android:hint="请输入要查询的号码"
        >
    </EditText>

    <Button
        android:layout_below="@id/et_address_phonenumber"
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="查询"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="@drawable/btn_select_contact"
        android:onClick="queryLocation"
        />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tv_address_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000"
        />


</RelativeLayout>
